.menuitems {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;

  .griditem {
    $gutter: 12px;

    width: calc(25% - #{$gutter} * 3/4);
    margin-bottom: $gutter;

    .menuitem {
      border: #e4e4e4 1px solid;
      overflow: hidden;
      background-color: white;
      border-radius: 5px;
      width: 100%;
      height: 100%;
      box-shadow: 0 0 14px rgba(0, 0, 0, 0.06);
      display: flex;
      flex-wrap: wrap;

      .itemimage {
        height: 150px;
        width: 100%;
        background-size: cover;
        background-position: center;
        cursor: zoom-in;
      }

      .itemdesc {
        // height: 80px;
        width: 100%;
        // padding: 10px;
