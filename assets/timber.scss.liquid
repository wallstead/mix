/*============================================================================
  #Jumbotron
==============================================================================*/



.jumbotron {
  position: relative;
  width: 100%;
  height: 450px;

  // box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.26);

  .slider {
    width: 100%;
    height: 100%;
    background-color: pink;
    position: absolute;
    overflow: hidden;

    div {
      height: 100%;
      width: 100%;

      background-size: cover;
      background-position: center;
      display: flex;
      justify-content: flex-start;
      // align-items: center;
      .text {
        display: flex;
        width: 100%;
        flex-wrap: wrap;
        align-items: flex-start;
        padding: 0 10px;

        h2 {
          max-width: 1200px;
          width: 100%;
          margin: 50px auto 0;
          color: white;
          font-size: 5vw;
          text-shadow: 4px 4px #f38fb3;
          // line-height: 1;

          a {
            color: white;
            text-decoration: underline;
          }
        }

        h3 {
          max-width: 1200px;
          width: 100%;
          margin: 0 auto 100px;
          color: white;
          font-size: 3vw;
          text-shadow: 2px 2px #f38fb3;
          // line-height: 1;

        }
      }

    }
  }

  .wrapper {
    position: relative;
    height:100%;
    user-select: none;

    .order {
      text-decoration: none;
      position: absolute;
      right: 0;
      bottom: 10px;
      background-color: white;
      padding: 0px 10px;
      font-size: 1.7rem;
      font-weight: 500;
      color: #ff85bb;
      border-radius: 5px;
      height: 42px;
      line-height: 42px;
      border: 2px solid $colorBtnSecondary;
      box-shadow: 0 0 12px rgba(0, 0, 0, 0.2);
      transition: all 0.1s;

      &:hover {
        transform: translateY(-2px);
      }

      &:active {
        transform: scale(0.97) translateY(-2px);
      }

      i {
          font-size: 1.1rem;
      }
    }

    .orderbutton {
      pointer-events: all;
      position: absolute;
      padding: 0 10px ;
      // display: flex;
      // align-items: center;
      // justify-content: center;
      right: 0;
      bottom: 10px;
      transition: all 0.15s;
      // height: 250px;
      // width: 250px;

      &:hover {
        transform: scale(1.03);
      }

      &:active {
        transform: scale(0.97) translateY(2px);
      }

      img {
        height: 200px;
        width: 200px;
      }
    }
  }

  .ontop {
    pointer-events: none;
  }

}

